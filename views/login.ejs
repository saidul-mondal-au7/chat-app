<head>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <!-- <div class="centered-form__box2"> -->
        <h1 class="text-center mb-2">
          <i class="fa fa-comments fa-2x"></i>
        </h1>
        <h1 class="text-center mb-2">AttainU Chat</h1>
        <h2 class="text-center mb-2"><i class="fas fa-sign-in-alt"></i>  Login</h2>
        <%- include ('./partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group mt-2">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-5">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/signup">Signup</a>
        </p>
</body>